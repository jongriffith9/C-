#include <iostream>
#include <cmath>

int main() {
  //Setting variables
  double a, b, c;
  
  double root1, root2;
  
  //First output section
  std::cout << "Enter a: ";
  std::cin >> a;
  
  std::cout << "Enter b: ";
  std::cin >> b;
  
  std::cout << "Enter c: ";
  std::cin >> c;
  
  //Solving for the roots:
  //Positive Root
  root1 = (-b + sqrt(b*b -4*a*c)) / (2*a);
  
   //Negative Root
  root2 = (-b - sqrt(b*b -4*a*c)) / (2*a);
  
  //Outputting the roots:
  
  std::cout << "Root 1 is " << root1 << " \n";
  std::cout << "Root 2 is " << root2 << " \n";
  
  
  
  
  
  
  
}
